<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/announcement_action_background"

    android:layout_height="match_parent">




    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/rl0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:background="@drawable/underline_field"
            >

            <ImageView
                android:background="@drawable/input_icn_user"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/qaq"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_toRightOf="@+id/qaq"
                android:layout_toLeftOf="@+id/qaqs"
                android:layout_width="wrap_content"
                android:hint="First Name"
                android:textColorHint="#7b7c78"
                android:textColor="#7b7c78"
                android:textSize="16sp"
                android:maxLength="50"
                android:text=""
                android:gravity="center"
                android:id="@+id/et_firstname"
                android:inputType="textCapCharacters"
                android:nextFocusDown="@+id/et_lastname"
                android:nextFocusForward="@+id/et_lastname"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="invisible"
                android:background="@drawable/input_icn_user"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:id="@+id/qaqs"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl0"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/underline_field"
        >

        <ImageView
            android:background="@drawable/input_icn_user"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/ddd"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_toRightOf="@+id/ddd"
            android:layout_toLeftOf="@+id/ddds"
            android:layout_width="wrap_content"
            android:hint="Last Name"
            android:textColorHint="#7b7c78"
            android:textColor="#7b7c78"
            android:textSize="16sp"
            android:maxLength="50"
            android:gravity="center"
            android:text=""
            android:inputType="textCapCharacters"
            android:nextFocusDown="@+id/et_employee"
            android:nextFocusForward="@+id/et_employee"
            android:id="@+id/et_lastname"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="invisible"
            android:background="@drawable/input_icn_user"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/ddds"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        </RelativeLayout>


        <!--<RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/rl1"
            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/icn_login_demo"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Agent Code"
                android:textColorHint="#7b7c78"
                android:textColor="#7b7c78"
                android:textSize="16sp"
                android:maxLength="15"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>-->







        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_below="@id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_employee"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="PRC/License no."
                android:textColorHint="#7b7c78"
                android:textSize="16sp"
                android:gravity="center"
                android:maxLength="15"
                android:id="@+id/et_employee"
                android:inputType="numberSigned"
                android:nextFocusDown="@+id/et_region"
                android:nextFocusForward="@+id/et_region"
                android:textColor="#7b7c78"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl5"
            android:layout_below="@id/rl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_location"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Region"
                android:textColorHint="#7b7c78"
                android:textSize="16sp"
                android:maxLength="15"
                android:gravity="center"
                android:id="@+id/et_region"
                android:textColor="#7b7c78"
                android:inputType="textCapCharacters"
                android:nextFocusDown="@+id/et_division"
                android:nextFocusForward="@+id/et_division"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl6"
            android:layout_below="@id/rl5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_location"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Division"
                android:textColorHint="#7b7c78"
                android:textSize="16sp"
                android:maxLength="15"
                android:textColor="#7b7c78"
                android:gravity="center"
                android:id="@+id/et_division"
                android:inputType="textCapCharacters"
                android:nextFocusDown="@+id/et_station"
                android:nextFocusForward="@+id/et_station"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl7"
            android:layout_below="@id/rl6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_location"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Station No."
                android:textColorHint="#7b7c78"
                android:textSize="16sp"
                android:maxLength="15"
                android:textColor="#7b7c78"
                android:id="@+id/et_station"
                android:gravity="center"
                android:inputType="numberSigned"
                android:nextFocusDown="@+id/et_mobile"
                android:nextFocusForward="@+id/et_mobile"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl8"
            android:layout_below="@id/rl7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_mobile"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Mobile No."
                android:textColorHint="#7b7c78"
                android:textSize="16sp"
                android:gravity="center"
                android:maxLength="15"
                android:textColor="#7b7c78"
                android:id="@+id/et_mobile"
                android:inputType="numberSigned"
                android:nextFocusDown="@+id/et_email"
                android:nextFocusForward="@+id/et_email"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl9"
            android:layout_below="@id/rl8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_email"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/dsa"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_toRightOf="@+id/dsa"
                android:layout_toLeftOf="@+id/dsas"
                android:layout_width="wrap_content"
                android:hint="Email Address"
                android:textColorHint="#7b7c78"
                android:textSize="16sp"
                android:maxLength="50"
                android:gravity="center"
                android:text=""
                android:textColor="#7b7c78"
                android:id="@+id/et_email"
                android:inputType="textCapCharacters"
                android:nextFocusDown="@+id/et_password"
                android:nextFocusForward="@+id/et_password"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

            <ImageView
                android:background="@drawable/input_icn_email"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:visibility="invisible"
                android:layout_marginTop="10dp"
                android:id="@+id/dsas"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/r20"
            android:layout_below="@id/rl9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_password"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Enter current or new password"
                android:textColorHint="#7b7c78"
                android:textSize="16sp"
                android:id="@+id/et_password"
                android:maxLength="15"
                android:inputType="textPassword"
                android:nextFocusDown="@+id/et_confirm"
                android:nextFocusForward="@+id/et_confirm"
                android:gravity="center"
                android:textColor="#7b7c78"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r21"
            android:layout_below="@id/r20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_password"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Confirm Password"
                android:textColorHint="#7b7c78"
                android:textSize="16sp"
                android:maxLength="15"
                android:id="@+id/et_confirm"
                android:inputType="textVisiblePassword"
                android:nextFocusDown="@+id/b_save"
                android:nextFocusForward="@+id/b_save"
                android:gravity="center"
                android:textColor="#7b7c78"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>







        <RelativeLayout
            android:id="@+id/r91"
            android:layout_below="@id/r21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:background="@drawable/bordered_text_green"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:text="SAVE"
                android:id="@+id/b_save"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_height="wrap_content" />





        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/r92"
            android:layout_below="@id/r91"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="12dp">


        </RelativeLayout>

    </RelativeLayout>

    </ScrollView>
</LinearLayout>