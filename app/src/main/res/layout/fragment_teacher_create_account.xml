<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/announcement_action_background"

    android:layout_height="match_parent">




    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <RelativeLayout
            android:id="@+id/rl0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:background="@drawable/underline_field"
            >

            <ImageView
                android:background="@drawable/input_icn_user"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="First Name"
                android:id="@+id/cet_firstname"
                android:textColorHint="#7b7c78"
                android:textColor="#7b7c78"
                android:textSize="16sp"
                android:maxLength="30"
                android:text=""
                android:inputType="textCapCharacters"
                android:nextFocusDown="@+id/cet_lastname"
                android:nextFocusForward="@+id/cet_lastname"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"

                 /><requestFocus/>


        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl0"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/underline_field"
        >

        <ImageView
            android:background="@drawable/input_icn_user"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_width="wrap_content"
            android:hint="Last Name"
            android:id="@+id/cet_lastname"
            android:textColorHint="#7b7c78"
            android:textColor="#7b7c78"
            android:textSize="16sp"
            android:gravity="center"
            android:maxLength="15"
            android:inputType="textCapCharacters"
            android:nextFocusDown="@+id/cet_employeeno"
            android:nextFocusForward="@+id/cet_employeeno"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />


        </RelativeLayout>


        <!--<RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/rl1"
            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/icn_login_demo"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Agent Code"
                android:textColorHint="#7b7c78"
                android:textColor="#7b7c78"
                android:textSize="16sp"
                android:maxLength="15"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>-->







        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_below="@id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_employee"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="PRC/License no."
                android:id="@+id/cet_employeeno"
                android:textColorHint="#7b7c78"
                android:textSize="16sp"
                android:maxLength="15"
                android:gravity="center"
                android:textColor="#7b7c78"
                android:inputType="numberSigned"
                android:nextFocusDown="@+id/cet_region"
                android:nextFocusForward="@+id/cet_region"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl5"
            android:layout_below="@id/rl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_location"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Region"
                android:id="@+id/cet_region"
                android:textColorHint="#7b7c78"
                android:inputType="textCapCharacters"
                android:nextFocusDown="@+id/cet_division"
                android:nextFocusForward="@+id/cet_division"
                android:textSize="16sp"
                android:maxLength="15"
                android:gravity="center"
                android:textColor="#7b7c78"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl6"
            android:layout_below="@id/rl5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_location"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Division"
                android:id="@+id/cet_division"
                android:textColorHint="#7b7c78"
                android:inputType="textCapCharacters"
                android:nextFocusDown="@+id/cet_station_no"
                android:nextFocusForward="@+id/cet_station_no"
                android:textSize="16sp"
                android:gravity="center"
                android:maxLength="15"
                android:textColor="#7b7c78"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl7"
            android:layout_below="@id/rl6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_location"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Station No."
                android:id="@+id/cet_station_no"
                android:textColorHint="#7b7c78"
                android:textSize="16sp"
                android:maxLength="15"
                android:gravity="center"
                android:textColor="#7b7c78"
                android:inputType="textCapCharacters"
                android:nextFocusDown="@+id/cet_mobile_no"
                android:nextFocusForward="@+id/cet_mobile_no"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl8"
            android:layout_below="@id/rl7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_mobile"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Mobile No."
                android:id="@+id/cet_mobile_no"
                android:textColorHint="#7b7c78"
                android:textSize="16sp"
                android:maxLength="15"
                android:gravity="center"
                android:textColor="#7b7c78"
                android:inputType="numberSigned"
                android:nextFocusDown="@+id/cet_email_address"
                android:nextFocusForward="@+id/cet_email_address"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl9"
            android:layout_below="@id/rl8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/stuff"
                android:background="@drawable/input_icn_email"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_toRightOf="@+id/stuff"
                android:layout_toLeftOf="@+id/stuff2"
                android:layout_width="wrap_content"
                android:hint="Email Address"
                android:id="@+id/cet_email_address"
                android:textColorHint="#7b7c78"
                android:layout_centerInParent="true"
                android:inputType="textCapCharacters"
                android:nextFocusDown="@+id/cet_password"
                android:nextFocusForward="@+id/cet_password"
                android:textSize="16sp"
                android:maxLength="50"
                android:maxLines="2"
                android:text=""
                android:gravity="center"
                android:textColor="#7b7c78"

                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/stuff2"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:background="@drawable/input_icn_email"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/r20"
            android:layout_below="@id/rl9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_password"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Password"
                android:id="@+id/cet_password"
                android:textColorHint="#7b7c78"
                android:inputType="textCapCharacters"
                android:nextFocusDown="@+id/cet_confirm_password"
                android:nextFocusForward="@+id/cet_confirm_password"
                android:textSize="16sp"
                android:maxLength="15"
                android:gravity="center"
                android:password="true"
                android:textColor="#7b7c78"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r21"
            android:layout_below="@id/r20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/underline_field"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/input_icn_password"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="wrap_content"
                android:hint="Confirm Password"
                android:id="@+id/cet_confirm_password"
                android:textColorHint="#7b7c78"
                android:textSize="16sp"
                android:maxLength="15"
                android:password="true"
                android:gravity="center"
                android:textColor="#7b7c78"
                android:inputType="textVisiblePassword"
                android:nextFocusDown="@+id/b_save"
                android:nextFocusForward="@+id/b_save"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>







        <RelativeLayout
            android:id="@+id/r91"
            android:layout_below="@id/r21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:background="@drawable/bordered_text_green"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:id="@+id/b_save"
                android:text="CREATE"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_height="wrap_content" />





        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/r92"
            android:layout_below="@id/r91"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"

            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Already have an Account? "
                android:textColor="#7a7a76"
                android:id="@+id/ttv"
                android:textSize="13sp"

                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text=" Login"
                android:textColor="#10aaeb"
                android:id="@+id/login"
                android:textSize="13sp"

                android:layout_height="wrap_content" />

        </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    </ScrollView>
</LinearLayout>