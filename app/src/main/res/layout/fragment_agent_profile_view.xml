<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">


            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagery"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/input_icn_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_icn_user" />


                <TextView
                    android:id="@+id/tv_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/input_icn_userz"
                    android:layout_toRightOf="@+id/input_icn_user"
                    android:gravity="center"
                    android:hint="Full Name"
                    android:maxLength="25"
                    android:textColor="@color/darkadobe"
                    android:textColorHint="#bbbbbb"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/input_icn_userz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_icn_user"
                    android:visibility="invisible" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl1"

                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/input_icn_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_icn_email" />


                <TextView
                    android:id="@+id/tv_email_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/input_icn_emailz"
                    android:layout_toRightOf="@+id/input_icn_email"
                    android:gravity="center"
                    android:hint="Email Address"
                    android:maxLength="50"
                    android:textColor="@color/darkadobe"
                    android:textColorHint="#bbbbbb"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/input_icn_emailz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_icn_email"
                    android:visibility="invisible" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/r20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl9"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/input_icn_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_icn_password"
                    android:visibility="invisible" />


                <Button
                    android:id="@+id/button_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bordered_text_green"
                    android:gravity="center"
                    android:maxLength="15"
                    android:text="LOGOUT"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="16sp" />


            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>
</LinearLayout>