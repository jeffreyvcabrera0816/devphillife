                    android:layout_toRightOf="@+id/iv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />

            </RelativeLayout>







        </RelativeLayout>


</RelativeLayout>






