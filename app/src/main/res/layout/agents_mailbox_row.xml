<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/forum_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom">

    <!--com.pkmmte.view.Circular-->

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="CLIENT NAME"
                android:textColor="@color/darkadobe"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/client_name"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:textColor="@color/darkadobe"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_date_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_client_name"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:textColor="@color/darkadobe"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date_received"
                android:gravity="left"
                android:text="NOTE"
                android:textColor="@color/darkadobe"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note"
                android:gravity="left"
                android:textColor="@color/darkadobe"
                android:textSize="13sp" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>