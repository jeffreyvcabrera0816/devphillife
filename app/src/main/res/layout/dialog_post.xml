<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00f7f7e9"
    android:layout_margin="10dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/r1"
        android:background="@drawable/bordered_text_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:background="@drawable/underline_only_light"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/rl1"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Edit"
                android:visibility="gone"
                android:id="@+id/tv_edit"
                android:textColor="#1b1b1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/rl1"
            android:background="@drawable/underline_only_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Delete"
                android:id="@+id/tv_delete"
                android:visibility="gone"
                android:textColor="#1b1b1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_below="@+id/rl2"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:id="@+id/tv_report"
                android:text="Report..."
                android:textColor="#1b1b1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


     <!--   I find it offensive
        I think its spam
        I am not interested-->

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/rl3"
            android:background="@drawable/underline_only_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:id="@+id/tv_offensive"
                android:text="I find it offensive"
                android:textColor="#1b1b1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl5"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/rl4"
            android:background="@drawable/underline_only_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:id="@+id/tv_spam"
                android:text="I think it's spam"
                android:textColor="#1b1b1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl6"
            android:layout_below="@+id/rl5"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:id="@+id/tv_not_interested"
                android:text="I am not interested"
                android:textColor="#1b1b1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl7"
            android:layout_below="@+id/rl6"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="visible"
                android:id="@+id/tv_cancel"
                android:text="Cancel"
                android:textColor="#1b1b1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>